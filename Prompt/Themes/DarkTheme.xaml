
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Kolory bazowe -->
  <Color x:Key="Color.Background">#FF1E1E1E</Color>
  <Color x:Key="Color.Foreground">#FFEFEFEF</Color>
  <Color x:Key="Color.Border">#FF3C3C3C</Color>
  <Color x:Key="Color.Accent">#FF5B8CFF</Color>
  <Color x:Key="Color.Panel">#FF252525</Color>
  <Color x:Key="Color.Subtle">#FF2B2B2B</Color>

  <!-- Pędzle -->
  <SolidColorBrush x:Key="Brush.Background" Color="{StaticResource Color.Background}"/>
  <SolidColorBrush x:Key="Brush.Foreground" Color="{StaticResource Color.Foreground}"/>
  <SolidColorBrush x:Key="Brush.Border"     Color="{StaticResource Color.Border}"/>
  <SolidColorBrush x:Key="Brush.Accent"     Color="{StaticResource Color.Accent}"/>
  <SolidColorBrush x:Key="Brush.Panel"      Color="{StaticResource Color.Panel}"/>
  <SolidColorBrush x:Key="Brush.Subtle"     Color="{StaticResource Color.Subtle}"/>

  <!-- Styl okna -->
  <Style TargetType="Window">
    <Setter Property="Background" Value="{DynamicResource Brush.Background}"/>
    <Setter Property="Foreground" Value="{DynamicResource Brush.Foreground}"/>
  </Style>

  <!-- Styl Borderów (ramki kolumn) -->
  <Style TargetType="Border">
    <Setter Property="BorderBrush" Value="{DynamicResource Brush.Border}"/>
  </Style>

  <!-- Styl TextBlock domyślny -->
  <Style TargetType="TextBlock">
    <Setter Property="Foreground" Value="{DynamicResource Brush.Foreground}"/>
  </Style>

  <!-- Animacyjne kropki -->
  <SolidColorBrush x:Key="Brush.LoadingDot" Color="{StaticResource Color.Accent}"/>

</ResourceDictionary>